<Window x:Class="MVVM_intro.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_intro.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Label Content="FirstName" HorizontalAlignment="Left" Margin="33,79,0,0" VerticalAlignment="Top"/>
        <Label Content="FullName" HorizontalAlignment="Left" Margin="33,156,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name ="FirstName" HorizontalAlignment="Left" Height="23" Margin="140,79,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="LastName" HorizontalAlignment="Left" Height="23" Margin="140,121,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="LastName" HorizontalAlignment="Left" Margin="33,117,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Save" Content="Save" HorizontalAlignment="Left" Margin="115,225,0,0" VerticalAlignment="Top" Width="75" Click="Save_Click"/>
        <TextBlock x:Name="FullName" HorizontalAlignment="Left" Margin="140,161,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
